{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "@typescript-eslint"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "e2e",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "domain:flights",
                "onlyDependOnLibsWithTags": ["domain:flights", "domain:shared"]
              },
              {
                "sourceTag": "domain:dashboard",
                "onlyDependOnLibsWithTags": [
                  "domain:dashboard",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:external",
                "onlyDependOnLibsWithTags": ["domain:external", "domain:shared"]
              },
              {
                "sourceTag": "domain:passenger",
                "onlyDependOnLibsWithTags": [
                  "domain:passenger",
                  "domain:shared"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "eslint:recommended",
        "plugin:@nrwl/nx/typescript",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
